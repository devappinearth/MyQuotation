<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MyQuotations" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/deep_blue</item>
        <!--ツールバーのフォント-->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

<!--ツールバーのアプリ名のフォント-->
<style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:fontFamily">@font/roboto</item>
</style>

<style name="popup_delete_mode" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:colorBackground">@color/gray</item>
</style>

</resources>
