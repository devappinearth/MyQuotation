<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical"
    android:background="#1000a1"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:id="@+id/back_arrow_container_nontext"
        android:visibility="visible">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/toolbar_back_arrow_nontext"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button_container_nontext"
        android:visibility="gone">

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="保存"
            android:textSize="12sp"
            android:textColor="#2B2B2B"
            android:backgroundTint="#def0ff"
            android:id="@+id/toolbar_save_button"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</LinearLayout>